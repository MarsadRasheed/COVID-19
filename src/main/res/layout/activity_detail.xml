<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="57dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="16dp"
        tools:context=".DetailActivity"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailName"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="Pakistan"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeTextType="uniform"
                ></TextView>


            <TextView
                android:layout_margin="8dp"
                android:id="@+id/detailNewCon"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="New Confiremd : 00"
                android:autoSizeMinTextSize="3sp"
                android:autoSizeTextType="uniform"
                android:maxLines="1">
            </TextView>

            <TextView
                android:id="@+id/detailCon"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Total Confiremd : 00"
                android:autoSizeMinTextSize="3sp"
                android:autoSizeTextType="uniform"
                android:maxLines="1">
            </TextView>


            <TextView
                android:id="@+id/detailNewRec"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="New Recovered : 00"
                android:autoSizeMinTextSize="3sp"
                android:autoSizeTextType="uniform"></TextView>


            <TextView
                android:id="@+id/detailRec"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Total Recovered : 00"
                android:autoSizeMinTextSize="3sp"
                android:autoSizeTextType="uniform"></TextView>


            <TextView
                android:id="@+id/detailNewDea"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="New Deaths : 00"
                android:textColor="@color/colorAccent"
                android:autoSizeMinTextSize="3sp"
                android:autoSizeTextType="uniform"
                ></TextView>

            <TextView
                android:id="@+id/detailDea"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_margin="8dp"
                android:layout_marginEnd="16dp"
                android:text="Total Deaths : 00"
                android:textColor="@color/colorAccent"
                android:autoSizeMinTextSize="3sp"
                android:autoSizeTextType="uniform"
                ></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>


